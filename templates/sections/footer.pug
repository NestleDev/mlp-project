footer.footer
    .container
        .footer__row
            .footer__cell
                a(href="#intro" data-nav).logo
                    img.logo__img.footer__logo(src="./images/logo.png", alt="logo")
                .footer__policy !{data.policy}
            .footer__cell
                .footer__menu
                    +menu(data.footer.menu_1, 'column')(data-nav)
            .footer__cell
                .footer__menu
                    +menu(data.footer.menu_2, 'column')(data-nav)
            .footer__cell
                .footer__form
                    include ../components/form.pug
                .footer__socials
                    +socials(data.footer.socials)
        .footer__copyright
            .copyright !{data.copyright}
            a.link(href=`mailto:${data.email}`)= data.email